CREATE TABLE IF NOT EXISTS Document
(
    id TEXT PRIMARY KEY,
    title TEXT,
    stakeholders TEXT,
    scale TEXT,
    issuanceDate TEXT,
    type TEXT,
    language TEXT,
    coordinates TEXT,
    connections INTEGER DEFAULT 0,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS DocumentConnection
(
    id TEXT PRIMARY KEY,
    documentId TEXT,
    connectionId TEXT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
