CREATE TABLE IF NOT EXISTS Document
(
    id TEXT PRIMARY KEY,
    title TEXT,
    description TEXT,
    stakeholders TEXT,
    scale TEXT,
    issuanceDate TEXT,
    type TEXT,
    language TEXT,
    coordinates TEXT,
    connections INTEGER DEFAULT 0,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS DocumentConnection
(
    id TEXT PRIMARY KEY,
    documentId TEXT,
    connectionId TEXT,
    type TEXT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TRIGGER after_delete_document_connection
AFTER DELETE ON DocumentConnection
FOR EACH ROW
BEGIN

    UPDATE Document
    SET connections = connections - 1
    WHERE id = OLD.connectionId;
END;

CREATE TRIGGER after_insert_document_connection
AFTER INSERT ON DocumentConnection
FOR EACH ROW
BEGIN
    UPDATE Document
    SET connections = connections + 1
    WHERE id = NEW.connectionId;
END;

CREATE TABLE IF NOT EXISTS User
(
    id       INTEGER not null primary key autoincrement,
    username TEXT    not null,
    password TEXT    not null,
    role     TEXT    not null,
    salt     TEXT    not null
);